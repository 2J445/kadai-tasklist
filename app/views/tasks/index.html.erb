  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task) do |f| %>
        <div class="mb-3">
          <%= f.label :status, 'ステータス' %>
          <%= f.text_field :status %>
        </div>
        <div class="mb-3">
          <%= f.label :content, 'タスク' %>
          <%= f.text_field :content %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>

